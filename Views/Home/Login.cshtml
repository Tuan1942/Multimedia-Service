@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}
<br />
<br />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous" referrerpolicy="no-referrer" />

<form asp-controller="User" asp-action="Login" method="post">
    <div class="row">
        <div class="col col-lg-6 ">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp" class="img-fluid" alt="img">
        </div>
        <div class=" col col-lg-6">
            <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                <p class="lead fw-normal mb-0 me-3">Đăng nhập với:</p>
                <button type="button" class="btn btn-primary mx-1">
                    <i class="fab fa-facebook-f"></i>
                </button>
                <button type="button" class="btn btn-primary mx-1">
                    <i class="fab fa-twitter"></i>
                </button>
                <button type="button" class="btn btn-primary mx-1">
                    <i class="fab fa-linkedin-in"></i>
                </button>
            </div>
            <div class="form-group mt-1">
                <label asp-for="Username">Tên người dùng:</label>
                <input asp-for="Username" class="form-control w-75" />
                <span asp-validation-for="Username" class="text-danger "></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Password">Mật khẩu</label>
                <input asp-for="Password" class="form-control w-75" type="password" />
                <span asp-validation-for="Password" class="text-danger "></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-2">
                <div class="form-check mb-0">
                    <input class="form-check-input me-2" type="checkbox" value="" id="loginCheckbox" />
                    <label class="form-check-label" for="loginCheckbox">
                        Ghi nhớ đăng nhập
                    </label>
                </div>
                <a href="#!" class="text-body w-50">Quên mật khẩu?</a>
            </div>

            <button type="submit" class="btn btn-primary mt-4">Đăng nhập</button>

            <div class="text-center text-lg-start">
                <p class="fw-bold mt-2 pt-1 mb-0">
                    Chưa có tài khoản? <a href="../Home/Register" class="link">Đăng ký</a>
                </p>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
